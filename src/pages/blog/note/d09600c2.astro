---
import Layout from "../../../layouts/Layout.astro";
import AstroDate from "../../../components/Date.astro";

export const title = "hour changed sun times more light";
export const description = "watch tick tock";
export const posted = new Date("2025-03-31");

const styles = {
  owl: "owl absolute top-0 left-0",
};
---

<Layout title={title} description={description}>
  <h1 title={description}>{title}</h1>
  <p>
    {"> "}
    <AstroDate posted={posted} />
  </p>
  <p>if tomorrow i'duve thought "a joke". haha.</p>
  <p>but not so. so march on march on. rah ra.</p>
  <img
    alt="striken parade from observant centers"
    title="all lives under the sun"
    src="/blog/note/d09600c2/WAKEUP.png"
    width="600"
  />
  <img
    alt="hoot"
    class={styles.owl}
    src="/blog/note/d09600c2/owl1.png"
    width="100"
    height="100"
  />
  <img
    alt="hoot"
    class={styles.owl}
    src="/blog/note/d09600c2/owl2.png"
    width="100"
    height="100"
  />
  <img
    alt="hoot"
    class={styles.owl}
    src="/blog/note/d09600c2/owl3.png"
    width="100"
    height="100"
  />
</Layout>

<script>
  const images = document.querySelectorAll(".owl");
  const flaps = [];
  images.forEach((img, i) => {
    img.style.left =
      Math.random() * (window.innerWidth - img.offsetWidth) + "px";
    img.style.top =
      Math.random() * (window.innerHeight - img.offsetHeight) + "px";
    flaps[i] = {
      dx: (Math.random() * 2 - 1) * 6,
      dy: (Math.random() * 2 - 1) * 6,
    };
    img.addEventListener("click", () => {
      img.remove();
    });
  });

  function fly() {
    images.forEach((img, i) => {
      if (!document.body.contains(img)) {
        return;
      }
      let x = parseFloat(img.style.left);
      let y = parseFloat(img.style.top);
      let { dx, dy } = flaps[i];
      x += dx;
      y += dy;
      if (x <= 0 || x + img.offsetWidth >= window.innerWidth) {
        flaps[i].dx *= -1;
      }
      if (y <= 0 || y + img.offsetHeight >= window.innerHeight) {
        flaps[i].dy *= -1;
      }
      img.style.left = x + "px";
      img.style.top = y + "px";
    });
    requestAnimationFrame(fly);
  }
  fly();
</script>
