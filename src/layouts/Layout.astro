---
import "../styles.css";
import Header from "../layouts/Header.astro";

export interface Props {
  title: string;
}
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" href="/favicon.png" />
        <meta name="generator" content={Astro.generator} />
        <meta name="author" content="zim" />
        <meta name="description" content="random words and rambling musings to share" />
        <title>{title}</title>
        <script defer data-domain="o526.net" src="https://plausible.io/js/script.js"></script>
    </head>
    <body>
        <Header />
        <main>
            <slot />
        </main>
    </body>
</html>
